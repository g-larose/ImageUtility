<UserControl
    x:Class="Image_Utility.Views.RenamerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Image_Utility.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="1000"
    Height="650"
    mc:Ignorable="d">
    <Grid Background="{StaticResource Primary300ColorBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Margin="10,10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="28"
            Foreground="{StaticResource Primary900ColorBrush}"
            Text="Re-Namer" />
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition />

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="150"/>
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>

            <!--#region Source Folder-->
            <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     md:HintAssist.Hint="Source"
                     md:HintAssist.Foreground="{StaticResource Primary800ColorBrush}"
                     Foreground="{StaticResource Primary900ColorBrush}"
                     Background="{StaticResource Primary200ColorBrush}"
                     BorderBrush="{StaticResource Primary700ColorBrush}"
                     Height="38" 
                     Grid.Column="0"
                     Grid.Row="0"
                     Grid.ColumnSpan="2"
                     Width="500"
                     HorizontalAlignment="Left"
                     Text="{Binding SourceDir}"/>
            <Button Grid.Column="1"
                    Grid.Row="0"
                    Style="{StaticResource MaterialDesignFloatingActionButton}"
                    Height="36"
                    Width="36"
                    Content=". . ."
                    BorderBrush="Transparent"
                    Foreground="{StaticResource Primary800ColorBrush}" 
                    Background="{StaticResource PrimaryColorBrush}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="210 -3 0 0"
                    Command="{Binding OpenSourceFolderCommand}"/>
            <TextBlock Grid.Column="1"
                       Text="Files"
                       FontSize="16"
                       Foreground="{StaticResource Primary900ColorBrush}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" 
                       Margin="260 -3 0 0"/>
            <TextBlock Grid.Column="1"
                       Text="{Binding FileCount, FallbackValue=10}"
                       FontSize="16"
                       Foreground="{StaticResource Primary900ColorBrush}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" 
                       Margin="300 -3 0 0"/>
            <!--#endregion-->

            <!--#region SEARCH FOR-->
            <Border Width="300"
                    Height="125"
                    Grid.Row="1"
                    Grid.Column="0"
                    BorderBrush="{StaticResource Primary600ColorBrush}"
                    Background="{StaticResource PrimaryColorBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    VerticalAlignment="Center">


                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="10" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>

                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="1"
                               Grid.Row="0"
                               Text="Match:" 
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               Foreground="{StaticResource Primary900ColorBrush}"
                               FontSize="16"
                               Margin="0 0 4 0"/>
                    <TextBox Grid.Column="2"
                             Height="50"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             md:HintAssist.Hint="Search For"
                             md:HintAssist.Foreground="{StaticResource Primary900ColorBrush}"
                             Foreground="{StaticResource Primary900ColorBrush}"
                             Background="{StaticResource Primary200ColorBrush}"
                             BorderBrush="{StaticResource Primary700ColorBrush}"
                             VerticalAlignment="Center"
                             Margin="0 6 4 0"
                             Padding="6 0 6 0"
                             TextAlignment="Justify"
                             FontSize="16"/>
                    <TextBlock Grid.Column="1"
                                Grid.Row="1"
                                Text="Replace With:" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Foreground="{StaticResource Primary900ColorBrush}"
                                FontSize="16"
                                Margin="0 -6 4 0"/>
                    <TextBox Grid.Column="2"
                             Grid.Row="1"
                             Height="50"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             md:HintAssist.Hint="Replace With"
                             md:HintAssist.Foreground="{StaticResource Primary900ColorBrush}"
                             Foreground="{StaticResource Primary900ColorBrush}"
                             Background="{StaticResource Primary200ColorBrush}"
                             BorderBrush="{StaticResource Primary700ColorBrush}"
                             VerticalAlignment="Top"
                             Margin="0 6 4 0"
                             Padding="6 0 6 0"
                             TextAlignment="Justify"
                             FontSize="16"/>
                </Grid>
            </Border>
            <!--#endregion-->
            <!--#region  FILE LIST -->
            <ListView Grid.Column="0"
                      Grid.Row="2"
                      Grid.ColumnSpan="2"
                      ItemsSource="{Binding Files}" 
                      Margin="0,0,0,-270">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="FileName" DisplayMemberBinding="{Binding fileName}"/>
                        <GridViewColumn Header="New FileName" DisplayMemberBinding="{Binding newFileName}"/>
                    </GridView>
                </ListView.View>

            </ListView>

            <!--#endregion-->
        </Grid>
        <StackPanel Grid.Row="2"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 10 20 10">
            <Button Background="{StaticResource PrimaryColorBrush}" 
                    BorderBrush="{StaticResource Primary600ColorBrush}"
                    BorderThickness="1"
                    Content="APPLY"
                    Foreground="{StaticResource Primary800ColorBrush}"
                    Height="40"
                    Width="80"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"/>
        </StackPanel>
    </Grid>
</UserControl>
