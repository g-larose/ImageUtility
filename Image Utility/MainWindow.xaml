<Window x:Class="Image_Utility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Image_Utility"
        xmlns:vm="clr-namespace:Image_Utility.ViewModels"
        xmlns:v="clr-namespace:Image_Utility.Views"
        mc:Ignorable="d"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:converter="clr-namespace:Image_Utility.Converters"
        WindowStartupLocation="CenterScreen"
        Title="Image Utility PRO" 
        Height="900" 
        Width="1400"
        BorderBrush="{StaticResource GreenColorBrush}"
        BorderThickness=".75">

    <Window.Resources>
        <converter:BoolToColorConverter x:Key="boolToColorConverter" />
    </Window.Resources>
    
    <Grid Background="{StaticResource PrimaryColorBrush}">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        
        <!--region Navigation-->
        <Border Grid.Column="0"
                Grid.Row="0"
                Grid.RowSpan="3"
                Grid.ColumnSpan="2"
                BorderBrush="Black"
                BorderThickness="0 0 1 0"
                Background="{StaticResource Primary200ColorBrush}">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="90"/>
                </Grid.RowDefinitions>

                   
                <RadioButton Grid.Row="0"
                             Width="120"
                             Height="80"
                             Command="{Binding NavigateRenamerCommand}"
                             ToolTip="Renamer"
                             ToolTipService.HasDropShadow="True"
                             ToolTipService.Placement="Right"
                             ToolTipService.ShowDuration="2000"
                             ToolTipService.VerticalOffset="24"
                             ToolTipService.HorizontalOffset="6"
                             HorizontalAlignment="Center"
                             Padding="0"
                             Style="{StaticResource HoverStyle}"
                             IsEnabled="{Binding CanExecute}">
                    <fa:IconImage Icon="ArrowUpAZ"
                                  Foreground="DarkGray"
                                  Height="40"
                                  Width="40" 
                                  Margin="40 0"/>
                </RadioButton>

                
                <RadioButton Width="120"
                        Height="80"
                        Grid.Row="2"
                        Command="{Binding NavigateDownloaderCommand}"
                        ToolTip="Downloader"
                        ToolTipService.HasDropShadow="True"
                        ToolTipService.Placement="Right"
                        ToolTipService.ShowDuration="2000"
                        ToolTipService.VerticalOffset="24"
                        ToolTipService.HorizontalOffset="6"
                        Style="{StaticResource HoverStyle}"
                        IsEnabled="{Binding CanExecute}">
                    <fa:IconImage Icon="FileImage"
                                  Foreground="DarkGray"
                                  Height="40"
                                  Width="40"
                                  Margin="40 0"/>
                </RadioButton>
                <RadioButton Width="120"
                        Height="80"
                        Grid.Row="1"
                        Command="{Binding NavigateResizerCommand}"
                        ToolTip="Resizer"
                        ToolTipService.HasDropShadow="True"
                        ToolTipService.Placement="Right"
                        ToolTipService.ShowDuration="2000"
                        ToolTipService.VerticalOffset="24"
                        ToolTipService.HorizontalOffset="6"
                        Style="{StaticResource HoverStyle}"
                        IsEnabled="{Binding CanExecute}">
                    <fa:IconImage Icon="TextHeight"
                                  Foreground="DarkGray"
                                  Height="40"
                                  Width="40" 
                                  Margin="40 0"/>
                </RadioButton>
                <RadioButton Width="120"
                        Height="80"
                        Grid.Row="3"
                        Command="{Binding NavigateCompresserCommand}"
                        ToolTip="Compressor"
                        ToolTipService.HasDropShadow="True"
                        ToolTipService.Placement="Right"
                        ToolTipService.ShowDuration="2000"
                        ToolTipService.VerticalOffset="24"
                        ToolTipService.HorizontalOffset="6"
                        Style="{StaticResource HoverStyle}"
                        IsEnabled="{Binding CanExecute}">
                    <fa:IconImage Icon="FileZipper"
                                  Foreground="DarkGray"
                                  Height="40"
                                  Width="40" 
                                  Margin="40 0"/>
                </RadioButton>
                <RadioButton Width="120"
                        Height="80"
                        Grid.Row="6"
                        Command="{Binding NavigateSettingsCommand}"
                        ToolTip="Settings"
                        ToolTipService.HasDropShadow="True"
                        ToolTipService.Placement="Right"
                        ToolTipService.ShowDuration="2000"
                        ToolTipService.VerticalOffset="24"
                        ToolTipService.HorizontalOffset="6"
                        Style="{StaticResource HoverStyle}"
                        IsEnabled="{Binding CanExecute}">
                    <fa:IconImage Icon="Gear"
                                  Foreground="DarkGray"
                                  Height="40"
                                  Width="40" 
                                  Margin="40 0"/>
                </RadioButton>
            </Grid>
           
        </Border>
                
        <!--#endregion-->
        
        <!--#region Main Content -->
        <Grid Grid.Column="3"
              Grid.Row="1"
              Margin="20 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="142" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0"
                        Orientation="Vertical">
                <StackPanel Orientation="Horizontal"
                            Grid.Row="0">
                    <Border CornerRadius="12"
                            Background="Transparent">
                        <Image Source="/Assets/PNG/logo.png"
                               HorizontalAlignment="Left"
                               Height="128">
                            <Image.Effect>
                                <DropShadowEffect BlurRadius="16"
                                      ShadowDepth="4"
                                      Direction="270"
                                      Color="Black"
                                      Opacity=".6" />
                            </Image.Effect>
                        </Image>
                    </Border>
                    <TextBlock Text="Image Utility Pro"
                               FontSize="92"
                               Foreground="{StaticResource LightRedToLightOrangeGradientBrush}" 
                               VerticalAlignment="Center"
                               Opacity=".7"
                               Margin="20 0 0 10">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="14"
                                              ShadowDepth="4"
                                              Direction="270"
                                              Color="Black"
                                              Opacity="1" />
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
                <Separator Width="1100" 
                           HorizontalAlignment="Left"
                           Background="{StaticResource Primary300ColorBrush}"/>
            </StackPanel>
            
            <ContentControl 
                    Grid.Row="1"
                    Content="{Binding SelectedViewModel}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="-10 0">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type vm:RenamerViewModel}">
                        <v:RenamerView />
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:DownloaderViewModel}">
                        <v:DownloaderView />
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:ResizerViewModel}">
                        <v:ResizerView />
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
                        <v:SettingsView />
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:CompresserViewModel}">
                        <v:CompresserView />
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </Grid>
        
        <!--#endregion-->
        
        <!--#region Footer-->
        <StackPanel Grid.Column="2"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    Margin="4"
                    VerticalAlignment="Center">
            <TextBlock Text="Online"
                       FontSize="22"
                       Foreground="{Binding IsOnline, Converter={StaticResource boolToColorConverter}, 
                                    FallbackValue={StaticResource Primary700ColorBrush}}"
                       VerticalAlignment="Top"
                       Margin="20 -14 0 0"/>

        </StackPanel>
        <!--#endregion-->
    </Grid>
</Window>
